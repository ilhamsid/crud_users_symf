{% extends 'base.html.twig' %}

{% block title %}Détail User{% endblock %}

{% block body %}
<div class="container">
    <h1>Détail User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>NomComplet</th>
                <td>{{ user.nomComplet }}</td>
            </tr>
        </tbody>
    </table>

    <p><a class="btn btn-secondary" href="{{ path('user_index') }}" role="button">Retour liste</a></p>
    <p><a class="btn btn-warning" href="{{ path('user_edit', {'id': user.id}) }}" role="button">Edit</a></p>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}
